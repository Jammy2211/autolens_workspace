#!/bin/bash -l

#SBATCH -N 1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=16
#SBATCH -J example_1
#SBATCH -o output/output.%A.out
#SBATCH -e error/error.%A.err
#SBATCH -p hpc7
#SBATCH -A dp004
#SBATCH -t 48:00:00   # longest job
